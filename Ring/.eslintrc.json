{
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": ["react", "jsx-a11y", "import"],
    "rules": {
      "no-tabs": 2,
      "linebreak-style": ["error", "windows"],
      "quotes": ["error", "double", { "avoidEscape": true }],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "always",
          "jsx": "never",
          "ts": "never",
          "tsx": "never",
          "mjs": "never"
        }
      ]
    }
  }
  